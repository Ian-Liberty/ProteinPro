<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/image_view"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:visibility="gone"
                android:src="@drawable/test2"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginVertical="10dp"
                    android:orientation="horizontal">


                    <TextView
                        android:id="@+id/nickname_TV"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="닉네임"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <ImageButton
                        android:id="@+id/menu_IB"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.1"
                        android:background="#002039F6"
                        android:visibility="gone"
                        android:src="@drawable/baseline_more_horiz_24" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:orientation="horizontal">

                    <RatingBar
                        android:id="@+id/review_RB"
                        style="@android:style/Widget.Holo.RatingBar.Small"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginHorizontal="5dp"
                        android:isIndicator="true"
                        android:numStars="5"
                        android:progressTint="#FFcc00"
                        android:rating="3"
                        android:stepSize="1" />

                    <TextView
                        android:id="@+id/date_TV"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0000-00-00"
                        android:textColor="#8E8E93" />
                </LinearLayout>
            </LinearLayout>


        </LinearLayout>



        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/imageList_rv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        </androidx.recyclerview.widget.RecyclerView>

        <TextView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="GOOD 👍"
            android:textColor="#34C759"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/good_TV"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textStyle="bold" />


        <TextView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="BAD 👎"
            android:textColor="#FF3B30"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/bad_TV"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/like_TV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:background="@drawable/round_background_border_blue2"
            android:padding="5dp"
            android:text="👍 00"
            android:textColor="@color/text_blue" />

        <View
            android:layout_width="match_parent"
            android:layout_height="50px"
            android:layout_marginVertical="10dp"
            android:layout_marginBottom="75dp"
            android:background="#f0f0f0" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>